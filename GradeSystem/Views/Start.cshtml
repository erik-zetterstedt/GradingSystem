@{ Layout = "layout/Layout.cshtml"; }

<div align="center">
    @foreach (var item in @Model)
    {
        {
            ViewBag.condition = item.Key == ViewBag.currentId ? "btn btn-success" : "btn btn-default";
        }
        <a style="width: 105px; margin: 20px 10px 20px 0;" class="@ViewBag.condition" href="@item.Key">@item.Value</a>
    }
</div>
    @if (ViewBag.Contains)
    {
        <div class="form-group">
            <form method="POST" action="/@ViewBag.currentId" name="Grades">
                <div class="form-control" align="center" style="width: 100%; height: auto">
                    <div align="center">Hur roligt har du haft det?</div>
                    <br/>
                    Lägst 
                        @for (int i = 1; i <= 8; i++)
                        {
                            <label class="btn btn-default" id="one" style="width: 70px; margin-right: 5px; height: 40px">
                                <input type="radio" value="@i" name="First" required="required" /> @i
                            </label>
                        }
                     Högst
                    </div>
                <br/>

                <div class="form-control" align="center" style="width: 100%; height: auto">
                    <div align="center">Hur nöjd är du med egen insats/prestation?</div>
                    <br/>
                    Lägst
                    @for (int i = 1; i <= 8; i++)
                    {
                        <label class="btn btn-default" style="width: 70px; margin-right: 5px; height: 40px">
                            <input type="radio" value="@i" name="Second" required="required" /> @i
                        </label>
                    }
                    Högst
                </div>
                <br/>

                <div class="form-control" align="center" style="width: 100%; height: auto">
                    <div align="center">Hur nöjd är du med teamets samarbete och förmåga att arbeta tillsammans?</div>
                    <br/>
                    Lägst
                    @for (int i = 1; i <= 8; i++)
                    {
                        <label class="btn btn-default" style="width: 70px; margin-right: 5px; height: 40px">
                            <input type="radio" value="@i" name="Third" required="required" /> @i
                        </label>
                    }
                    Högst
                </div>
                <br/>

                <div class="form-control" align="center" style="width: 100%; height: auto">
                    <div align="center">Hur bra förutsättningar har teamet haft?</div>
                    <br/>
                    Lägst
                    @for (int i = 1; i <= 8; i++)
                    {
                        <label class="btn btn-default" style="width: 70px; margin-right: 5px; height: 40px">
                            <input type="radio" value="@i" name="Fourth" required="required" /> @i
                        </label>
                    }
                    Högst
                </div>
                <br/>

                <div class="form-control" align="center" style="width: 100%; height: auto">
                    <div align="center">Hur hög arbetsro rådde under perioden (avsaknad av störningar)?</div>
                    <br />
                    Lägst
                    @for (int i = 1; i <= 8; i++)
                    {
                        <label class="btn btn-default" style="width: 70px; margin-right: 5px; height: 40px">
                            <input type="radio" value="@i" name="Fifth" required="required" /> @i
                        </label>
                    }
                    Högst
                </div>
                <br />
                <div align="center">
                    <input class="btn btn-success" type="submit" value="Betygsätt" />
                </div>
            </form>
        </div>
    }

<script>
    $('label').click(function () {
        $(this).css("background-color", "#449d44");
    });
</script>
